<div class="row">
    <aside class="login col-2">
        <h2>
            login:
        </h2>
        <div>
            <label for="email"><b>email:</b></label>
            <input id="loginEmail" type="text" placeholder="Enter email" name="email" required>

            <label for="password"><b>password:</b></label>
            <input id="loginPassword" type="password" placeholder="Enter Password" name="password" required>
            <input id="loginBtn" type="submit" name="login-btn">
        </div>
        <h2 class="mt-5">
            signup:
        </h2>
        <div action="/login" method="post">
            <label for="first_name"><b>first_name:</b></label>
            <input id="signupFirstName" type="text" placeholder="enter first_name" name="first_name" required>
            
            <label for="last_name"><b>last_name:</b></label>
            <input id="signupLastName" type="text" placeholder="enter last_name" name="last_name" required>
            
            <label for="email"><b>email@:</b></label>
            <input id="signupEmail" type="email" placeholder="enter email@" name="email" required>

            <label for="username"><b>username:</b></label>
            <input id="signupUserName" type="text" placeholder="Enter Username" name="username" required>

            <label for="password"><b>password:</b></label>
            <input id="signupPassword" type="password" placeholder="Enter Password" name="password" required>

            <input id="signupBtn" type="submit" name="signup-btn">
        </div>
    </aside>
    <section class="posts col-10 border-left border-right">
        <h2>
            recent dreams:
        </h2>
        <ul>
            {{#each dreamsData as |dream|}}
            <li>
                <h3>
                    {{dataValues.title}}
                </h3>
                <h4>
                    {{dataValues.createdAt}}
                </h4>
                <p>
                    {{dataValues.description}}
                </p>
            </li>
            {{/each}}
        </ul>
        <h2 class="mt-2">
            recent nightmares:
        </h2>
        <ul>
            {{#each nightmareData as |nightmare|}}
            <li>
                <h3>
                    {{dataValues.title}}
                </h3>
                <h4>
                    {{dataValues.createdAt}}
                </h4>
                <p>
                    {{dataValues.description}}
                </p>
            </li>
            {{/each}}
        </ul>
    </section>
</div>
</main>

<script src="./js/login.js"></script>