<div class="row">
    <aside class="col-2 bodyBackground">
        <div class="row">
            <aside class="login col-2 bodyBackground">
                <h2 class="spray gray">
                    login:
                </h2>
                <div>
                    <div>
                        <label for="email"><b>email:</b></label>
                        <input id="loginEmail" type="text" placeholder="enter email" name="email" required>
                    </div>
                    <div>
                        <label for="password"><b>password:</b></label>
                        <input id="loginPassword" type="password" placeholder="enter Password" name="password" required>
                    </div>
                    <input id="loginBtn" type="submit" name="submit-btn">
                </div>
                <h2 class="mt-5 spray gray">
                    signup:
                </h2>
                <div action="/signup" method="post">
                    <div>
                        <label for="first_name"><b>firstname:</b></label>
                        <input id="signupFirstName" type="text" placeholder="enter firstname" name="first_name" required>
                    </div>
                    <div>
                        <label for="last_name"><b>lastname:</b></label>
                        <input id="signupLastName" type="text" placeholder="enter lastname" name="last_name" required>
                    </div>
                    <div>
                        <label for="email"><b>email:</b></label>
                        <input id="signupEmail" type="email" placeholder="enter email_address" name="email" required>
                    </div>
                    <div>
                        <label for="username"><b>username:</b></label>
                        <input id="signupUserName" type="text" placeholder="enter username" name="username" required>
                    </div>
                    <div>
                        <label for="password"><b>password:</b></label>
                        <input id="signupPassword" type="password" placeholder="enter password" name="password" required>
                    </div>
        
                    <input id="signupBtn" type="submit" name="signup-btn">
                </div>
            </aside>
        </div>
    </aside>
    <section class="col-10 bodyBackground border-left border-right">
        <h2 class="spray gray">
            recent dreams:
        </h2>
        <ul>
            {{#each dreamsData as |dream|}}
            <li>
                <h3>
                    {{dataValues.title}}
                </h3>
                <h4>
                    {{dataValues.createdAt}}
                </h4>
                <p>
                    {{dataValues.description}}
                </p>
            </li>
            {{/each}}
        </ul>
        <h2 class="mt-2 spray gray">
            recent nightmares:
        </h2>
        <ul>
            {{#each nightmareData as |nightmare|}}
            <li>
                <h3>
                    {{dataValues.title}}
                </h3>
                <h4>
                    {{dataValues.createdAt}}
                </h4>
                <p>
                    {{dataValues.description}}
                </p>
            </li>
            {{/each}}
        </ul>
    </section>
</div>
</main>

<script src="./js/login.js"></script>