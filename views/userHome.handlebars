<div class="row">
  <aside class="col-2">
    <h2 class="bodyBackground spray gray">
      my dreams:
    </h2>
      <ul>
        {{#each userDreamsData.dreams as |userDreams|}}
          <li>
            <h4>
              {{dataValues.title}}
            </h4>
            <p>
              {{dataValues.createdAt}}
            </p>
          </li>
        {{/each}}
      </ul>

      <ul>
        {{#each userNightmareData.nightmares as |userNightmare|}}
          <li>
            <h4>
              {{dataValues.title}}
            </h4>
            <p>
              {{dataValues.createdAt}}
            </p>
          </li>
        {{/each}}
      </ul>
  </aside>
  <section class="col-8 bodyBackground border-left border-right">
    <h2 class="spray gray">
      recent dreams:
    </h2>
    <ul>
      {{#each dreamsData as |dream|}}
        <li>
          <h3>
            {{dataValues.title}}
          </h3>
          <h4>
            {{dataValues.createdAt}}
          </h4>
          <p>
            {{dataValues.description}}
          </p>
        </li>
      {{/each}}
    </ul>
    <h2 class="mt-2 spray gray">
      recent nightmares:
    </h2>
    <ul>
      {{#each nightmareData as |nightmare|}}
        <li>
          <h3>
            {{dataValues.title}}
          </h3>
          <h4>
            {{dataValues.createdAt}}
          </h4>
          <p>
            {{dataValues.description}}
          </p>
        </li>
      {{/each}}
    </ul>
  </section>
  <aside class="col-2 bodyBackground">
    <h2 class="spray gray">
      users:
    </h2>
    <ul>
      {{#each usersData as |user|}}
        <li>
          <h4>
            {{dataValues.username}}
          </h4>
        </li>
      {{/each}}
    </ul>
  </aside>
</div>